<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="event" path="/">
        <default key="_controller">VlbgWebsocketBundle:Event:index</default>
    </route>

    <route id="event_show" path="/{id}/show">
        <default key="_controller">VlbgWebsocketBundle:Event:show</default>
    </route>

    <route id="event_new" path="/new">
        <default key="_controller">VlbgWebsocketBundle:Event:new</default>
    </route>

    <route id="event_create" path="/create">
        <default key="_controller">VlbgWebsocketBundle:Event:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="event_edit" path="/{id}/edit">
        <default key="_controller">VlbgWebsocketBundle:Event:edit</default>
    </route>

    <route id="event_update" path="/{id}/update">
        <default key="_controller">VlbgWebsocketBundle:Event:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="event_delete" path="/{id}/delete">
        <default key="_controller">VlbgWebsocketBundle:Event:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
